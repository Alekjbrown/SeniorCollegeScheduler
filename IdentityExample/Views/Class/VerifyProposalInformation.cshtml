@model SeniorCollegeScheduler.Models.ViewModels.ClassDetailedViewModel
@{
    ViewData["Title"] = "Please Verify The Information";
}

<h2 style="text-align: center">@ViewData["Title"]</h2>

<h4 style="text-align: center">Proposed On: <span class="courseDetails">@DateTime.Now</span></h4>
<div style="padding-top: 20px">

    <h4 style="text-align: center">Class Description: <span class="courseDetails">@Model.ClassDesc</span></h4>
    <h4 style="text-align: center">Class Pre-Requisites: <span class="courseDetails">@Model.PreRequisites </span></h4>
    <h4 style="text-align: center">Preferred Times:</h4>
    <table style="width:100%">
        <tr>
            <th></th>
            <th>Monday</th>
            <th>Tuesday</th>
            <th>Wednesday</th>
            <th>Thursday</th>
            <th>Friday</th>
            <th>Saturday</th>
            <th>Sunday</th>
        </tr>
        <tr>
            <td style="font-weight: bold">Morning</td>
            @if (Model.MondayMorning.Equals("true"))
            {
                <td> Available </td>
            }
            else
            {
                <td> Unavailable </td>
            }
            @if (Model.TuesdayMorning.Equals("true"))
            {
                <td> Available </td>
            }
            else
            {
                <td> Unavailable </td>
            }
            @if (Model.WednesdayMorning.Equals("true"))
            {
                <td> Available </td>
            }
            else
            {
                <td> Unavailable </td>
            }
            @if (Model.ThursdayMorning.Equals("true"))
            {
                <td> Available </td>
            }
            else
            {
                <td> Unavailable </td>
            }
            @if (Model.FridayMorning.Equals("true"))
            {
                <td> Available </td>
            }
            else
            {
                <td> Unavailable </td>
            }
            @if (Model.SaturdayMorning.Equals("true"))
            {
                <td> Available </td>
            }
            else
            {
                <td> Unavailable </td>
            }
            @if (Model.SundayMorning.Equals("true"))
            {
                <td> Available </td>
            }
            else
            {
                <td> Unavailable </td>
            }
        </tr>
        <tr>
            <td style="font-weight: bold">Afternoon</td>
            @if (Model.MondayAfternoon.Equals("true"))
            {
                <td> Available </td>
            }
            else
            {
                <td> Unavailable </td>
            }
            @if (Model.TuesdayAfternoon.Equals("true"))
            {
                <td> Available </td>
            }
            else
            {
                <td> Unavailable </td>
            }
            @if (Model.WednesdayAfternoon.Equals("true"))
            {
                <td> Available </td>
            }
            else
            {
                <td> Unavailable </td>
            }
            @if (Model.ThursdayAfternoon.Equals("true"))
            {
                <td> Available </td>
            }
            else
            {
                <td> Unavailable </td>
            }
            @if (Model.FridayAfternoon.Equals("true"))
            {
                <td> Available </td>
            }
            else
            {
                <td> Unavailable </td>
            }
            @if (Model.SaturdayAfternoon.Equals("true"))
            {
                <td> Available </td>
            }
            else
            {
                <td> Unavailable </td>
            }
            @if (Model.SundayAfternoon.Equals("true"))
            {
                <td> Available </td>
            }
            else
            {
                <td> Unavailable </td>
            }
        </tr>
        <tr>
            <td style="font-weight: bold">Evening</td>
            @if (Model.MondayEvening.Equals("true"))
            {
                <td> Available </td>
            }
            else
            {
                <td> Unavailable </td>
            }
            @if (Model.TuesdayEvening.Equals("true"))
            {
                <td> Available </td>
            }
            else
            {
                <td> Unavailable </td>
            }
            @if (Model.WednesdayEvening.Equals("true"))
            {
                <td> Available </td>
            }
            else
            {
