@model SeniorCollegeScheduler.Models.ViewModels.CreateClassCommand
@{
    ViewData["Title"] = "Index";
}

<h2 style="text-align: center">Course Proposal</h2>


<form asp-controller="Class" asp-action="CreateProposal" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div id="wrapper">
        <h3 style="text-align: center">Today's Date: @DateTime.Now</h3>
        <div style="text-align: center;">
            <h3>Class</h3>
            <div style="display:block; padding-bottom: 5px">
                <div style="width: 50%;  margin: auto">
                    <label asp-for="ProposedTitle">Proposed Title</label>
                    <input class="form-control" asp-for="ProposedTitle" value="@Model.ProposedTitle" />
                    <span asp-validation-for="ProposedTitle" class="text-danger"></span>
                </div>
                <div style="width: 25%; margin: auto">
                    <label asp-for="NumClassSessions">Number of Class Sessions</label>
                    <input class="form-control" asp-for="NumClassSessions" />
                    <span asp-validation-for="NumClassSessions" class="text-danger"></span>
                </div>
                <div style="width: 25%;  margin: auto">
                    <label asp-for="LengthOfSession">Length of Class Session in minutes</label>
                    <input class="form-control" asp-for="LengthOfSession" />
                    <span asp-validation-for="LengthOfSession" class="text-danger"></span>
                </div>
                <div>
                    <label style="display:block" asp-for="ClassDesc">Class Description</label>
                    <textarea asp-for="ClassDesc" style="width: 75%" rows="3" cols="80"> </textarea>
                    <span asp-validation-for="ClassDesc" class="text-danger"></span>
                </div>
                <div>
                    <label style="display:block" asp-for="PreRequisites">Pre-requisites</label>
                    <textarea asp-for="PreRequisites" style="width: 75%" rows="3" cols="80"> </textarea>
                    <span asp-validation-for="PreRequisites" class="text-danger"></span>
                </div>

            </div>

        </div>
        <div style="clear:both; padding: 5px;">
            <h4 class="important" style="text-align: center">Instructor Preferences</h4>
            <h4 style="text-align: center">Please Identify Your Available Times</h4>

            <div class="row" style="word-spacing: 40px; text-align:center;">
                <div class="col-md-12 col-xs3">
                    <h5 style="display:inline">Times</h5>
                    <h5 style="display:inline">Mon. </h5>
                    <h5 style="display:inline">Tues.</h5>
                    <h5 style="display:inline">Wed. </h5>
                    <h5 style="display:inline">Thur.</h5>
                    <h5 style="display:inline">Fri. </h5>
                    <h5 style="display:inline">Sat. </h5>
                    <h5 style="display:inline">Sun. </h5>
                </div>
            </div>
            <div class="row" style="word-spacing: 60px; text-align: center">
                <div class="col-md-12 col-xs-3" style="padding-right:5px">
                    <h5 style="display:inline">Morning</h5>
                    <input asp-for="MondayMorning" type="checkbox" value="true" />
                    <input asp-for="TuesdayMorning" type="checkbox" value="true" />
                    <input asp-for="WednesdayMorning" type="checkbox" value="true" />
                    <input asp-for="ThursdayMorning" type="checkbox" value="true" />
                    <input asp-for="FridayMorning" type="checkbox" value="true" />
                    <input asp-for="SaturdayMorning" type="checkbox" value="true" />
                    <input asp-for="SundayMorning" type="checkbox" value="true" />
                </div>
            </div>
            <div class="row" style="word-spacing: 60px; text-align: center;">
                <div class="col-md-12 col-xs-3">
                    <h5 style="display:inline">Afternoon</h5>
                    <input asp-for="MondayAfternoon" type="checkbox" value="true" />
                    <input asp-for="TuesdayAfternoon" type="checkbox" value="true" />
                    <input asp-for="WednesdayAfternoon" type="checkbox" value="true" />
                    <input asp-for="ThursdayAfternoon" type="checkbox" value="true" />
                    <input asp-for="FridayAfternoon" type="checkbox" value="true" />
                    <input asp-for="SaturdayAfternoon" type="checkbox" value="true" />
                    <input asp-for="SundayAfternoon" type="checkbox" value="true" />
                </div>
            </div>
            <div class="row" style="word-spacing: 60px; text-align: center ;">
                <div class="col-md-12 col-xs-3" style="padding-right:5px">
                    <h5 style="display:inline">Evening</h5>
                    <input asp-for="MondayEvening" type="checkbox" value="true" />
                    <input asp-for="TuesdayEvening" type="checkbox" value="true" />
                    <input asp-for="WednesdayEvening" type="checkbox" value="true" />
                    <input asp-for="ThursdayEvening" type="checkbox" value="true" />
                    <input asp-for="FridayEvening" type="checkbox" value="true" />
                    <input asp-for="SaturdayEvening" type="checkbox" value="true" />
                    <input asp-for="SundayEvening" type="checkbox" value="true" />
                </div>
            </div>
            <div style="text-align: center; margin: 5px;">
                <label>Please list any date/time restrictions</label>
                <input asp-for="DateTimeRestrictions" type="text" />
            </div>

            <h3 style="text-align:center; text-decoration:underline">Instructor Requirements</h3>
            <div style="text-align: center">
                <p>If you have number of student restrictions for your class, please enter below: </p>
                <div style="border: 1px solid black">
                    <label asp-for="MinStudentCount"> Minimum Students</label>
                    <input asp-for="MinStudentCount" style="margin: 5px; width: 50px" type="text" />
                    <span asp-validation-for="MinStudentCount" class="text-danger"></span>
                    <label asp-for="MaxStudentCount"> Maximum Students</label>
                    <input asp-for="MaxStudentCount" type="text" style="width: 50px" />
                    <span asp-validation-for="MinStudentCount" class="text-danger"></span>
                </div>
                <p><span style="text-decoration: underline">Classroom Set-up</span>, please check box based on need</p>
                <div style="border: 1px solid black">
                    <label asp-for="ChairsNeeded">Chairs for Students</label>
                    <input asp-for="ChairsNeeded" style="margin: 5px; width: 50px" type="text" />
                    <span asp-validation-for="ChairsNeeded" class="text-danger"></span>
                    <label asp-for="TablesNeeded">Tables and Chairs for Students</label>
                    <input style="width: 50px" asp-for="TablesNeeded" type="text" />
                    <span asp-validation-for="TablesNeeded" class="text-danger"></span>
                </div>
                <p>
                    <span style="text-decoration: underline">Equipment Needed:</span>We will do our best to provide you
                    with what you need, but we use many different sites. You will need to verify equipment at the site you
                    are assigned for your computerized presentation before your class begins. Please select only the equipment
                    that is essential
                </p>
                <div style="border: 1px solid black">
                    <label>Internet Connection</label>
                    <input style="margin: 5px" type="checkbox" value="true" asp-for="InternetConnection" />
                    <label>Dry Erase Board and Markers</label>
                    <input type="checkbox" value="true" asp-for="DryEraseWithMarkers" />
                </div>
                <div style="border: 1px solid black; border-top: none">
                    <label>Projector for laptop w/ Screenwall</label>
                    <input style="margin: 5px" type="checkbox" value="true" asp-for="ProjectorWithScreen" />
                    <label>Enter PC Connection Type</label>
                    <select style="margin: 5px;" asp-for="PCConnectionType" asp-items="Model.connections"></select>
                </div>
                <div style="border: 1px solid black; border-top: none">
                    <label>Microphone/Sound System</label>
                    <input style="margin: 5px" type="checkbox" value="true" asp-for="MicrophoneWithSoundSystem" />
                    <label>VCR/DVD Player & Screen</label>
                    <input type="checkbox" value="true" asp-for="VCROrDVDWithScreen" />
                </div>
                <div style="border: 1px solid black; border-top: none; margin-bottom: 5px;">
                    <label>Podium</label>
                    <input style="margin: 5px" type="checkbox" value="true" asp-for="Podium" />
                    <label asp-for="OtherEquipmentNeeded">Other:</label>
                    <input asp-for="OtherEquipmentNeeded" style="margin: 5px; width: 50px;" type="text" />
                    <span asp-validation-for="OtherEquipmentNeeded" class="text-danger"></span>
                </div>
                <label asp-for="HandoutCost">Handouts, Cost: </label>
                <input asp-for="HandoutCost" type="text" />
                <span asp-validation-for="HandoutCost" class="text-danger"></span>
                <p>
                    (A cost estimate is needed to build the handout cost into the course tuition;
                    instructors will be reimbursed actual expenses up to $2.00 per student for handouts
                    upon submission of a receipt. Higher amounts will be considered on a case by case basis.)
                </p>

                <p><span>Senior College pays instructors a stipend of $50 per hour of instruction.</span> Events may have a different pay structure.</p>
                <p>Please indicate whether you wish to be paid this stipend (leave unchecked if you wish to waive this stipend):</p>
                <div>
                    <label>Stipend to instructor </label>
                    <input asp-for="StipendRequested" style="margin: 5px" type="checkbox" name="StipendRequested" value="true" />
                </div>
            </div>

            <p>
                While Senior College is a non-profit organization, students are charged reasonable fees that help cover expenses including the
                printing and distribution of the catalogs, advertising, contracted services, office expenses and instructors' compensations.
            </p>

            <p>Thank you for your interest in teaching for Senior College of Greater Des Moines!</p>

            <button type="submit" class="btn btn-primary"> Submit </button>

        </div>
    </div>
</form>

