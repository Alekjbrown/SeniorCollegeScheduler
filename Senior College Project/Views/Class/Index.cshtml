@model Senior_College_Project.Models.ViewModels.CreateClassCommand
@{
    ViewData["Title"] = "Index";
}

<h2 style="text-align: center">Course Proposal</h2>



<form asp-controller="Create" asp-action="Index" method="post">
    <div id="wrapper">
        <h3 style="text-align: center">Today's Date: @DateTime.Now</h3>
        <div style="text-align: center;">
            <h3>Class</h3>
            <div style="display:block; padding-bottom: 5px">
                <div style="width: 50%;  margin: auto">
                    <label asp-for="ProposedTitle">Proposed Title</label>
                    <input class="form-control" asp-for="ProposedTitle" />
                    <span asp-validation-for="ProposedTitle"></span>
                </div>
                <div style="width: 50%; margin: auto">
                    <label asp-for="NumClassSessions">Number of Class Sessions</label>
                    <input class="form-control" asp-for="NumClassSessions" />
                    <span asp-validation-for="NumClassSessions"></span>
                </div>
                <div style="width: 50%;  margin: auto">
                    <label asp-for="LengthOfSession">Length of Class Session</label>
                    <input class="form-control" asp-for="LengthOfSession" />
                    <span asp-validation-for="LengthOfSession"></span>
                </div>
                <div>
                    <label style="display:block" asp-for="ClassDesc">Class Description</label>
                    <textarea asp-for="ClassDesc" style="width: 75%" rows="3" cols="80"> </textarea>
                    <span asp-validation-for="ClassDesc"></span>
                </div>
                <div>
                    <label style="display:block" asp-for="PreRequisites">Pre-Requisites</label>
                    <textarea asp-for="PreRequisites" style="width: 75%" rows="3" cols="80"> </textarea>
                    <span asp-validation-for="PreRequisites"></span>
                </div>

            </div>

        </div>
